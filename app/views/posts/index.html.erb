<h1>Foro</h1>



  <div class="row"> 
    <div class="col-md-8 col-md-offset-2" >
      <table class= "table">
        
         <thead>
            <tr>
              <th>Titulo</th>
              <th></th>
            <tr>  
         </thead>
         <tbody>
    <% @posts.each do |post| %>
       <tr>
      <td>
        <h4> <%= link_to post.titulo, post %> </h4>
        Publicado por
        <%= post.usuario.email %> ,<%= time_ago_in_words(post.created_at)%>
       
        
      </td>
      <td>
        <%= link_to 'Edit', edit_post_path(post), :type=>"button", :class=>"btn btn-link"%>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?'}, type:"button", :class=>"btn btn-link" %>
      </td>
      <td>
        
      </td>
      </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div>


